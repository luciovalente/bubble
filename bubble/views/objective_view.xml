<odoo>
    <record id="view_objective_tree" model="ir.ui.view">
        <field name="name">objective.tree</field>
        <field name="model">objective</field>
        <field name="arch" type="xml">
            <tree>
                <field name="company_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_objective_form" model="ir.ui.view">
        <field name="name">objective.form</field>
        <field name="model">objective</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="company_id"/>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <menuitem id="menu_objective_main" name="Objectives and OKRs" sequence="1"/>

        <menuitem id="menu_objective" name="Objectives" parent_id="menu_objective_main" sequence="2"/>
        <record id="action_objective" model="ir.actions.act_window">
            <field name="name">Objectives</field>
            <field name="res_model">objective</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_objective_list" name="Objectives" parent_id="menu_objective"
                  action="action_objective" sequence="3"/>
</odoo>
