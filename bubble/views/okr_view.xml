<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>
    <record id="view_okr_tree" model="ir.ui.view">
        <field name="name">okr.tree</field>
        <field name="model">okr</field>
        <field name="arch" type="xml">
            <tree>
                <field name="objective_id"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_okr_form" model="ir.ui.view">
        <field name="name">okr.form</field>
        <field name="model">okr</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="objective_id"/>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="bubble_id"/>
                        <field name="user_id"/>
                        <field name="active"/>
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <menuitem id="menu_okr" name="OKRs" parent_id="menu_objective_main" sequence="4"/>
        <record id="action_okr" model="ir.actions.act_window">
            <field name="name">OKRs</field>
            <field name="res_model">okr</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_okr_list" name="OKRs" parent_id="menu_okr"
                  action="action_okr" sequence="5"/>

</data>
</odoo>
