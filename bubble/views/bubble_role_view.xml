<odoo>
    <data>
        <record id="view_bubble_role_tree" model="ir.ui.view">
            <field name="name">bubble.role.tree</field>
            <field name="model">bubble.role</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_bubble_role_form" model="ir.ui.view">
            <field name="name">bubble.role.form</field>
            <field name="model">bubble.role</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="company_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="action_bubble_role" model="ir.actions.act_window">
            <field name="name">Bubble Roles</field>
            <field name="res_model">bubble.role</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
