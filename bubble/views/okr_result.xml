<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_okr_result_tree" model="ir.ui.view">
            <field name="name">okr.result.tree</field>
            <field name="model">okr.result</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="date_from" readonly="1"/>
                    <field name="date_to" readonly="1" />
                    <field name="okr_id"/>
                    <field name="okr_type" />
                    <field name="evaluation_id"/>
                    <field name="result"/>
                    <field name="result_char"/>
                    <field name="status" readonly="1" />
                </tree>
            </field>
        </record>


        <record id="view_okr_result_search" model="ir.ui.view">
            <field name="name">okr.result.search</field>
            <field name="model">okr.result</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Campi di ricerca e filtri possono essere aggiunti qui -->
                    <field name="okr_id" />
                    <field name="owner_id" />
                    <field name="user_id" />

                    <filter string="My OKR" name="my_okr" domain="[('user_id', '=', uid)]"/>
                </search>
            </field>
        </record>


        <record id="view_okr_result_form" model="ir.ui.view">
            <field name="name">okr.result.form</field>
            <field name="model">okr.result</field>
            <field name="arch" type="xml">
                <form>

                    <sheet>
                        <group>
                            <field name="date_from" readonly="1"/>
                            <field name="date_to" readonly="1" />
                            <field name="objective_id" readonly="1"/>
                            <field name="okr_id" readonly="1"/>
                            <field name="okr_type" readonly="1"/>
                            <field name="okr_description" readonly="1"/>
                            <field name="owner_id" widget="many2one_avatar_user" readonly="1"/>
                            <field name="evaluation_id" readonly="1"/>
                            <field name="auto_result" readonly="1" widget="percentage"/>
                            <field name="result" attrs="{'readonly': [('status','=','done')]}" widget="percentage"/>
                            <field name="result_char" attrs="{'readonly': [('status','=','done')]}" />
                            <field name="status" readonly="1" />
                            <field name="kpi_result" readonly="1" />
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_okr_result" model="ir.actions.act_window">
            <field name="name">OKR Results</field>
            <field name="res_model">okr.result</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_my_okr': 1}</field>
        </record>


    </data>
</odoo>
